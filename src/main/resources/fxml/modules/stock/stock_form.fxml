<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cu.cenpalab.siguapa.modules.stock.DashboardController">
  
  <top>
    <Label styleClass="header" text="Feed Supply Dashboard">
      <font>
        <Font size="20.0" />
      </font>
    </Label>
  </top>
  
  <center>
    <VBox spacing="10">
      <!-- Current Stock Table -->
      <TableView fx:id="stockTable">
        <columns>
          <TableColumn prefWidth="150" text="Feed Type">
            <cellValueFactory>
              <PropertyValueFactory property="name" />
            </cellValueFactory>
          </TableColumn>
          <TableColumn prefWidth="100" text="Quantity">
            <cellValueFactory>
              <PropertyValueFactory property="quantity" />
            </cellValueFactory>
          </TableColumn>
          <TableColumn prefWidth="100" text="Status">
            <cellValueFactory>
              <PropertyValueFactory property="status" />
            </cellValueFactory>
          </TableColumn>
        </columns>
      </TableView>
      
      <!-- Alerts List -->
      <ListView fx:id="alertList" prefHeight="100" />
    </VBox>
  </center>
  
  <bottom>
    <HBox alignment="CENTER" prefHeight="15.0" prefWidth="386.0" spacing="10">
      <Button onAction="#openConsumptionScreen" text="Record Consumption" />
      <Button onAction="#openOrderEstimationScreen" text="Estimate Order" />
    </HBox>
  </bottom>
</BorderPane>
